public class boton {
    protected boolean iluminado;
    protected boolean funcionando;

// Constructor (La rutina de "instalaci贸n" del bot贸n
    public boton() {
        this.funcionando = true;
        this.iluminado = false;
    }

    public void presionar(Modulonotificaciones notificaciones) {
        if (funcionando) {
            iluminar();
        } else {
            notificaciones.registrarFalla("Bot贸n defectuoso detectado.");
        }
    }

    public void iluminar() {
        iluminado = true;
        System.out.println(" Bot贸n iluminado");
    }

    public void apagarLuz() {
        iluminado = false;
    }

    public void setFuncionando(boolean estado) {
        this.funcionando = estado;
    }

    public static class botonAscensor {
        private int pisoDestino;

        public botonAscensor(int pisoDestino) {
            this.pisoDestino = pisoDestino;
        }

        public void enviarDestino(Ascensor ascensor, Sistemacontrol sistema, Modulonotificaciones notificaciones) {
            boton b = new boton();
            b.presionar(notificaciones);

            sistema.recibirSolicitudInterna(pisoDestino);
        }
    }

    public static class botonPiso {
        private String direccion;

        public botonPiso(String direccion) {
            this.direccion = direccion;
        }

        public void enviarSolicitud(Sistemacontrol sistema, int piso, Modulonotificaciones notificaciones) {
            boton b = new boton();
            b.presionar(notificaciones);

            sistema.recibirSolicitud(piso, direccion);
        }
    }
}

