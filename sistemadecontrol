import java.util.List;
import java.util.ArrayList;


class SistemaControl {
    private Ascensor ascensor;
    private List<Piso> pisos;
    private Modulonotificaciones notificaciones;

    public SistemaControl(int cantidadPisos) {
        notificaciones = new Modulonotificaciones();
        ascensor = new Ascensor(notificaciones);
        pisos = new ArrayList<>();
        for (int i = 0; i < cantidadPisos; i++) {
            pisos.add(new Piso(i));
        }
    }

    public void recibirSolicitud(int piso, String direccion) {
        notificaciones.registrarActividad("Solicitud recibida desde el piso  " + piso + " para " + direccion);
        ascensor.agregarDestino(piso);
        ascensor.mover();
    }

     public void recibirSolicitudInterna(int pisoDestino) {
    notificaciones.registrarActividad("Solicitud interna desde ascensor hacia el piso " + pisoDestino);
    ascensor.agregarDestino(pisoDestino);
    ascensor.mover();
}


    public Modulonotificaciones getNotificaciones() {
        return notificaciones;
    }

    public Ascensor getAscensor() {
        return ascensor;
    }
}
