public class Piso {
    private int numero;
    private botonPiso botonSubir;
    private botonPiso botonBajar;

// constructor 
    public Piso(int numero) {
        this.numero = numero;
        botonSubir = new botonPiso("subir");
        botonBajar = new botonPiso("bajar");
    }

    public int getNumero() {
        return numero;
    }
 // Método: solicitarAscensor Cuando alguien presiona el botón en el pasillo

    public void solicitarAscensor(SistemaControl sistema, String direccion, Modulonotificaciones notificaciones) {
        if (direccion.equalsIgnoreCase("subir")) {
            botonSubir.enviarSolicitud(sistema, numero, notificaciones);
        } else {
            botonBajar.enviarSolicitud(sistema, numero, notificaciones);
        }
    }
}

